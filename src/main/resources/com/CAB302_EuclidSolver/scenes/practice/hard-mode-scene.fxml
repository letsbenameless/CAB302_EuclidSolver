<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>


<?import javafx.scene.canvas.Canvas?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.CAB302_EuclidSolver.controller.PracticeHardModeController"
      prefHeight="600.0" prefWidth="900.0"
      spacing="20" styleClass="root">

    <!-- Top bar -->
    <HBox alignment="CENTER" spacing="20" styleClass="top-bar">
        <Region HBox.hgrow="ALWAYS"/> <!-- pushes right side content -->
        <Label fx:id="scoreLabel" text="Score 0 / 0" styleClass="info-label"/>
        <Button text="Exit Quiz" onAction="#handleExitQuiz" styleClass="primary-button"/>
    </HBox>

    <!-- Question area -->
    <VBox alignment="CENTER" spacing="15" VBox.vgrow="ALWAYS">
        <Label text="Find the value of 'a' in the equation below" styleClass="equation-prompt" />
        <ImageView fx:id="questionView" fitWidth="300" preserveRatio="true">
            <image>
                <Image url="@../../images/example-question.png" />
            </image>
        </ImageView>
    </VBox>

    <!-- Answer input area -->
    <VBox>
        <HBox alignment="CENTER" spacing="15" styleClass="answer-group">
            <TextField fx:id="answerField" promptText="Enter your answer..." styleClass="answer-field"/>
            <Button fx:id="checkButton" text="Check Answer" onAction="#handleCheckAnswer" styleClass="primary-button"/>
        </HBox>
    </VBox>


    <HBox>

        <Button text="Undo" fx:id="undoButton" styleClass="primary-button"/>
        <Button text="Redo" fx:id="redoButton" styleClass="primary-button"/>
        <Button text="Clear" fx:id="clearButton" styleClass="primary-button"/>

    </HBox>
    <HBox styleClass="notepad" alignment="CENTER">
        <Canvas fx:id="notepadCanvas" width="1200" height="300"/>
    </HBox>


</VBox>

