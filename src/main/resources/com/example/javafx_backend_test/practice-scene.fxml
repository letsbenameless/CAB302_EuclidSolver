<?import javafx.scene.canvas.Canvas?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafx_backend_test.PracticeController"
      prefHeight="600.0" prefWidth="900.0"
      spacing="20" styleClass="root">

    <!-- Top bar -->
    <HBox alignment="CENTER" spacing="20" styleClass="top-bar">
        <Label fx:id="timeLabel" text="5m 34s remaining" styleClass="info-label"/>
        <Region HBox.hgrow="ALWAYS"/> <!-- pushes right side content -->
        <Label fx:id="scoreLabel" text="Score 0 / 7" styleClass="info-label"/>
        <Button text="Exit Quiz" onAction="#handleExitQuiz" styleClass="primary-button"/>
    </HBox>

    <!-- Question area -->
    <VBox alignment="CENTER" spacing="15" VBox.vgrow="ALWAYS">
        <ImageView fx:id="logoImage" fitWidth="300" preserveRatio="true">
            <image>
                <Image url="@images/example-question.png" />
            </image>
        </ImageView>
    </VBox>

    <!-- Answer input area -->
    <HBox alignment="CENTER" spacing="15" styleClass="answer-group">
        <TextField fx:id="answer" promptText="Enter your answer..." styleClass="answer-field"/>
        <Button text="Check Answer" onAction="#handleCheckAnswer" styleClass="primary-button"/>
    </HBox>


    <HBox>

        <Button text="Undo" fx:id="undoButton" styleClass="primary-button"/>
        <Button text="Redo" fx:id="redoButton" styleClass="primary-button"/>
        <Button text="Clear" fx:id="clearButton" styleClass="primary-button"/>

    </HBox>
    <HBox styleClass="notepad" alignment="CENTER">
        <Canvas fx:id="notepadCanvas" width="1200" height="300"/>
    </HBox>


</VBox>

